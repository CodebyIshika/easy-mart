
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Product.css" /> ‌

    <title>AddProduct</title>
</head>
<body>
    @using (Html.BeginForm("AddProduct", "Store"))
     {
        <center>
            <h3>Add a new Product</h3>
            <div>
                <table>
                    <tr>
                        <td>Enter Product Name: </td>
                        <td>@Html.TextBox("Name")</td>
                    </tr>
                    <tr>
                        <td>Enter Product Description: </td>
                        <td>@Html.TextArea("Description")</td>
                    </tr>
                    <tr>
                        <td>Enter Product Price: </td>
                        <td>@Html.TextBox("ProductPrice")</td>
                    </tr>
                    <tr>
                        <td>Enter Stock Quantity: </td>
                        <td>@Html.TextBox("StockQuantity")</td>
                    </tr>

                </table>
                <input type="submit" value="Add Product" />
            </div>
        </center>

     }
</body>
</html>
